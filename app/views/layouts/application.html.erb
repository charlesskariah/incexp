<!DOCTYPE html>
<html>
<head>
  <title>Incexp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="<%= root_path%>">IncExp</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
              <ul class="nav navbar-nav">
                <li><a href="<%= root_path%>">Dashboard</a></li>
                <li><a href="<%= new_income_path%>">Add Income</a></li>
                <li><a href="<%= new_expense_path%>">Add Expense</a></li>
                <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Manage Categories<b class="caret"></b></a>
                   <ul class="dropdown-menu">
                     <li><%= link_to "Income Category" , income_categories_path%></li>
                     <li><%= link_to "Expense Category" , expense_categories_path%></li>
                   </ul>
               </li>
               <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Filters<b class="caret"></b></a>
                   <ul class="dropdown-menu">
                     <li><%= link_to "Expense Filter" , expenses_path%></li>
                     <li><%= link_to "Bank Statement" , transactions_path,  data: { no_turbolink: true }%></li>
                   </ul>
               </li>
                <li><a href="#contact">Contact</a></li>
              </ul>
              <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
            <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name %> <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Logout" , destroy_user_session_path, method: :delete%></li>
              </ul>
            </li>
            <% else %>
            <li><%= link_to 'Login', new_user_session_path %></li>
            <% end %>
          </ul>
            </div><!--/.nav-collapse -->
          </div>
      </nav>
        <div class="container margin-top">
    <% if notice %>
                          <div class="alert alert-success alert-dismissible fade_alerts" role="alert"><%= notice %>
                             <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                          </div>

                        <%end%>
                        <%if alert %>
                          <div class="alert alert-danger alert-dismissible fade_alerts" role="alert"><%= alert %>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        </div>
                        <% end %>
           <%= yield %>
        </div><!-- /.container -->
</body>
</html>
