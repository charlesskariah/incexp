<li><%= link_to('Add Expense Category',new_expense_category_path) %></li>
<h1>My Expense Categories</h1>
<% if @expense_categories.present?%>
  <table>
    <tr>
      <td><b>Category Name</b></td>
      <td><b>Description</b></td>
    </tr>
    <% @expense_categories.each do |category|%>
    <tr>
      <td><%= category.source%></td>
      <td><%= category.description%></td>
      <td><%= link_to 'Edit Category',  edit_expense_category_path(category) %></td>
    </tr>
    <% end%>
  </table>
<%else%>
  <h3>No Expense Categories found!!</h3>
<%end%>
