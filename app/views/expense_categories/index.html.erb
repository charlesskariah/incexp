
<div class = "row">
  <div class = "col-md-8"><h2>My Expense Categories</h2></div>
  <div class = "col-md-4"><h2><%= link_to('Add New',new_expense_category_path, :class=> "btn btn-success pull-right" ) %></h2>
</div>
</div>
<% if @expense_categories.present?%>
  <table class="table table-bordered table-hover">
    <tr>
      <th class="danger">Category Name</th>
      <th class="danger">Description</th>
      <th class="danger"></th>
    </tr>
    <% @expense_categories.each do |category|%>
    <tr class="success">
      <td ><%= category.source%></td>
      <td><%= category.description%></td>
      <td class = "text-center"><%= link_to 'Edit Category',  edit_expense_category_path(category), :class => "btn btn-info btn-sm "%></td>
    </tr>
    <% end%>
  </table>
<%else%>
  <h3>No Expense Categories found!!</h3>
<%end%>
